#!name=网络防火墙
#!desc=启用后，如果设备从"蜂窝网络"切换至"WiFi"，则断网10秒，Apple/Surge除外。
#!system=ios

[Script]
防火墙(规则) = type=rule,script-path=https://github.com/ATorNinja/Surge/raw/master/Timed-Firewall.js
防火墙(事件) = type=event,event-name=network-changed,script-path=https://github.com/ATorNinja/Surge/raw/master/WiFi-Firewall.js

[Rule]
AND,((NOT,((OR,((USER-AGENT,Surge*), (RULE-SET,https://github.com/ATorNinja/Surge/raw/master/Apple.list))))), (SCRIPT,防火墙(规则))),REJECT-TINYGIF
